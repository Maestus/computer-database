<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>computer-database</display-name>
  <welcome-file-list>
    <welcome-file>Views/index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>paging</param-name>
    <param-value>10</param-value>
  </context-param>
  <context-param>
    <param-name>offset</param-name>
    <param-value>0</param-value>
  </context-param>
  <servlet>
    <servlet-name>ServletComputer</servlet-name>
    <servlet-class>main.java.com.excilys.cdb.servlet.ServletComputer</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
</web-app>